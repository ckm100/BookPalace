<!DOCTYPE html><html><head> <title>My Books</title> <% include partial/header.ejs %></head><body> <% include partial/nav.ejs %> <div class="notification-container"> <% if (allData.requestTo.length !==0){%> <p class="pending-request">You have <%=allData.requestTo.length %> pending book request</p><%}%> <% if (allData.requestFrom.length !==0){%> <% allData.requestFrom.forEach(function(val){%> <p class="pending-approval"> <%=val.requestUserName%> requested a book titled <%=val.bookName%> from your collection &nbsp;&nbsp;&nbsp;&nbsp; <i class="fa fa-check-circle fa-2x accept-request" data-userId="<%=val.requestUserId%>" data-bookId="<%=val.bookId%>" title="Accept"></i> &nbsp;&nbsp; <i class="fa fa-times-circle fa-2x decline-request" data-userId="<%=val.requestUserId%>" data-bookId="<%=val.bookId%>" title="Decline"></i></p><%}) %> <%}%> </div><div class="embeded-result"> <% if (data.length===0){%> <h3>You have no books, click the add book button below to start adding your books</h3> <div class="books-container"> <div class="add-book-button"> <h3>Add Book</h3> <div class="hover-bg"></div></div></div><%}else{%> <h1>Your Book Collection</h1> <div class="books-container"> <% data.forEach(function(val){%> <div class="book"> <img src="<%=val.thumbnail%>" alt="<%=val.title%>" class="book-thumbnail"> <div class="book-info"> <p><strong>Title:</strong> <%=val.title%> </p><p><strong>Authors:</strong> <%=val.authors.join(", ") %> </p><p><strong>Publisher:</strong> <%=val.publisher%> </p><p><strong>Published Date:</strong> <%=val.publishedDate%> </p><p><strong>Book Info:</strong> <a href="<%=val.link%>" target="_blank" class="book-info-link">Here</a></p></div></div><%}) %> <div class="add-book-button"> <h3>Add Book</h3> <div class="hover-bg"></div></div></div><%}%> </div><div class="book-add-dialog"> <span class="close-icon"><i class="fa fa-times-circle fa-2x"></i></span> <p class="book-add-general-error">Something went wrong, please try again</p><p class="book-name-error">Please enter a book name</p><h1>Add Book</h1> <input type="text" placeholder="Enter book name or title" class="book-name"> <button class="add-book-btn">Add Book</button> </div><div class="top"><span><i class="fa fa-chevron-up"></i></span></div><div class="loader-container"> <img src="/img/loader.gif" alt="loader" class="loader"> <h3 class="loader-message"></h3> <button class="close-btn">Close</button> </div><div class="overlay"></div><% include partial/footer.ejs %></body></html>